<div class="container">
<table class="table table-bordered">
<h1>確認画面</h1>
<%= form_with(model: @feed, url: feeds_path, local: true) do |form| %>

  <!-- 確認画面でアップロードした画像を表示させるための記述 -->
  <td><%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %></td>
  <%= form.hidden_field :image_cache %>
  <td><%= form.label :comment %></td>
  <td><%= form.text_field :comment %></td>
  <td><%= form.submit "投稿する" %></td>
<% end %>
<%= form_with(model:@feed, url:new_feed_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <td><%= form.submit "戻る", name: "back" %></td>
<% end %>

</div>
</table>